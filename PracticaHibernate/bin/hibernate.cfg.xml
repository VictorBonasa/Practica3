<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/hibernatevtm</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
  <mapping class="com.victor.practicahibernate.Circuitos"/>
  <mapping class="com.victor.practicahibernate.Coches"/>
  <mapping class="com.victor.practicahibernate.Equipos"/>
  <mapping class="com.victor.practicahibernate.Pilotos"/>
  <mapping class="com.victor.practicahibernate.Ruedas"/>
  <mapping class="com.victor.practicahibernate.Sponsors"/>
 </session-factory>
</hibernate-configuration>
